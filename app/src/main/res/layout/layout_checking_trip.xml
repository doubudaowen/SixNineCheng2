<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_shared_height"
        android:background="#51c0ea" >

        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/return_link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="看房行程"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/my_two_text_width_map" />
       
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_success"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已预约"
                android:textColor="#66c6f2"
                android:textSize="@dimen/checking_text_size" />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_link"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:src="@drawable/slide_link" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/map_vertical_bar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_fails"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="未预约"
                android:textColor="#333333"
                android:textSize="@dimen/checking_text_size" />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_link_two"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/details_horizontal_line" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>