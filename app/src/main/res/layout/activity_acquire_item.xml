<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_shared_height"
        android:background="#51c0ea">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详情页"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/return_link" />

        <ImageView
            android:id="@+id/iv_collection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/details_collect2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/woman_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="姓名：" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="年龄：" />

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="职业：" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/dianhua"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="电话：" />

                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/telephone_icon" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/details_tabling_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_fxi_two_top"
        android:background="#EEEEEE"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:text="基本资料"
        android:textColor="#999999"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/details_tabling_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_qiwang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="期望区域：" />

            <TextView
                android:id="@+id/tv_zujing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="租金：" />

            <TextView
                android:id="@+id/tv_ruzhu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="入住：" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_xingqu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="兴趣：" />

            <TextView
                android:id="@+id/tv_xingzuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="星座：" />

            <TextView
                android:id="@+id/tv_jiguan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="籍贯：" />

            <TextView
                android:id="@+id/tv_yuanxiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="院校：" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/details_tabling_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_fxi_two_top"
        android:background="#EEEEEE"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:text="说明"
        android:textColor="#999999"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/details_tabling_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/scroll">

        <TextView
            android:id="@+id/tv_ziliao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:text="家电齐全，房屋干净，室友事少"
            android:textColor="#000000"
            android:textSize="18sp" />
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/details_tabling_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_fxi_two_top"
        android:background="#EEEEEE"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:text="照片"
        android:textColor="#999999"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/details_tabling_line" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:paddingRight="@dimen/iv_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_1"
                android:visibility="gone"
                android:layout_width="@dimen/iv_width"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="@dimen/iv_margin"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/iv_2"
                android:visibility="gone"
                android:layout_width="@dimen/iv_width"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:paddingLeft="@dimen/iv_margin"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/iv_3"
                android:visibility="gone"
                android:layout_width="@dimen/iv_width"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="@dimen/iv_margin"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/iv_4"
                android:visibility="gone"
                android:layout_width="@dimen/iv_width"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="@dimen/iv_margin"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/iv_5"
                android:visibility="gone"
                android:layout_width="@dimen/iv_width"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="@dimen/iv_margin"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/iv_6"
                android:visibility="gone"
                android:layout_width="@dimen/iv_width"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="@dimen/iv_margin"
                android:scaleType="fitXY"

                android:src="@drawable/ic_launcher" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>