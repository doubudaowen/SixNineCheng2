            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/panda_rental_linkman_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="联系人"
                    android:textColor="#AAAAAA" />

                <EditText
                    android:id="@+id/panda_rental_linkman_et"
                    style="@style/instruction_word_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/panda_rental_linkman_tv1"
                    android:hint="某某某"
                    android:maxLength="5" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/panda_rental_tel_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="手机号"
                    android:textColor="#AAAAAA" />

                <EditText
                    android:id="@+id/panda_rental_tel_et"
                    style="@style/instruction_word_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/panda_rental_tel_tv1"
                    android:hint="13333333333"
                    android:inputType="number"
                    android:maxLength="11" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/panda_rental_photo_left"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/image_height"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/release_picture_return" />
                </RelativeLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/panda_rental_photo_vp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" >

                </android.support.v4.view.ViewPager>

                <RelativeLayout
                    android:id="@+id/panda_rental_photo_right"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/image_height"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/my_return_my" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/panda_rental_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_shared_height"
        android:background="#51c0ea"
        android:text="立即发布"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</LinearLayout>
