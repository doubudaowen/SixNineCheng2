                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="配置"
                    android:textColor="#AAAAAA" />

                <CheckBox
                    android:id="@+id/panda_rental_deploy_cb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/panda_rental_deploy_tv"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/panda_rental_deploy_tv"
                    android:button="@drawable/checkbox_button"
                    android:checked="false"
                    android:padding="5dp"
                    android:text="电视"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/panda_rental_deploy_cb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/panda_rental_deploy_tv"
                    android:layout_toRightOf="@+id/panda_rental_deploy_cb1"
