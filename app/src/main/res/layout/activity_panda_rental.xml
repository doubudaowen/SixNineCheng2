                    android:layout_alignBaseline="@+id/panda_rental_deploy_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/panda_rental_deploy_cb2"
                    android:button="@drawable/checkbox_button"
                    android:checked="false"
                    android:padding="5dp"
                    android:text="暖气"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/panda_rental_deploy_cb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/panda_rental_deploy_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/panda_rental_deploy_cb3"
                    android:button="@drawable/checkbox_button"
                    android:checked="false"
                    android:padding="5dp"
                    android:text="煤气"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/panda_rental_deploy_cb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/panda_rental_deploy_tv"
                    android:layout_toRightOf="@+id/panda_rental_deploy_cb4"
                    android:button="@drawable/checkbox_button"
                    android:checked="false"
                    android:padding="5dp"
                    android:text="宽带"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/panda_rental_deploy_cb6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/panda_rental_deploy_cb1"
                    android:layout_below="@+id/panda_rental_deploy_cb1"
                    android:layout_marginTop="5dp"
                    android:button="@drawable/checkbox_button"
                    android:checked="false"
                    android:padding="5dp"
                    android:text="冰箱"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/panda_rental_deploy_cb7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/panda_rental_deploy_cb6"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/panda_rental_deploy_cb6"
                    android:button="@drawable/checkbox_button"
                    android:checked="false"
                    android:padding="5dp"
                    android:text="空调"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/panda_rental_deploy_cb8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/panda_rental_deploy_cb6"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/panda_rental_deploy_cb7"
                    android:button="@drawable/checkbox_button"
                    android:checked="false"
                    android:padding="5dp"
                    android:text="热水器"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/panda_rental_deploy_cb9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/panda_rental_deploy_cb6"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/panda_rental_deploy_cb8"
                    android:button="@drawable/checkbox_button"
                    android:checked="false"
                    android:padding="5dp"
                    android:text="洗衣机"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/panda_rental_address_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="地址"
                    android:textColor="#AAAAAA" />

                <EditText
                    android:id="@+id/panda_rental_address_et"
                    style="@style/instruction_word_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/panda_rental_address_tv1"
                    android:hint="朝阳区西大望路珠江帝景B区8楼" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/panda_rental_size_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="面积"
                    android:textColor="#AAAAAA" />

                <EditText
                    android:id="@+id/panda_rental_size_et"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/panda_rental_size_tv1"
                    android:hint="15"
                    android:inputType="number" />

                <TextView
