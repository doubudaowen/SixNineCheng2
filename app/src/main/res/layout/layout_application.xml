                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/application_string_license"
                    android:textColor="@color/application_color_text"
                    android:textSize="@dimen/application_font_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/application_string_image"
                    android:textColor="@color/application_color_text"
                    android:textSize="@dimen/application_font_size" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/release_picture_background" >

                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/application_font_size_left"
                android:src="@drawable/details_tabling_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/application_font_height"
                android:layout_marginLeft="@dimen/application_font_size_left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/application_string_card"
                    android:textColor="@color/application_color_text"
                    android:textSize="@dimen/application_font_size" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
