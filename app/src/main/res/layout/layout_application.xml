<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_color_header_width"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_shared_height"
        android:background="@color/application_color_header" >

        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/return_link" />

        <LinearLayout
            android:layout_width="@dimen/application_font_width"
            android:layout_height="@dimen/application_width_top"
            android:layout_centerInParent="true"
            android:background="@color/application_color_header_width"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cooperation_teger"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/application_string_text_know"
                android:textColor="@color/application_color_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/map_vertical_bar" />

            <TextView
                android:id="@+id/tv_my_application"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/application_string_text"
                android:textColor="@color/application_color_text_choose" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/my_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >
        <include
            android:layout_width="match_parent"
            layout="@layout/layout_cooperation_guideline" />
    </ScrollView>

    <ScrollView
        android:id="@+id/home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
