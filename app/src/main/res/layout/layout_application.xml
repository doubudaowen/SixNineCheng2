            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/application_font_size_height"
                android:layout_marginLeft="@dimen/application_font_size_left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/application_string_text_business"
                    android:textColor="@color/application_color_text"
                    android:textSize="@dimen/application_font_size" />

                <TextView
                    android:id="@+id/tv_house_medium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/application_string_text_mediation"
                    android:textColor="@color/application_color_text_mediation"
                    android:textSize="@dimen/application_font_size" />

                <ImageView
                    android:id="@+id/iv_show_close"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/cooperation_return" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/application_font_size_left"
                android:src="@drawable/details_tabling_line" />

            <include
                android:layout_width="wrap_content"
                layout="@layout/layout_repair_business" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_four_nine_top"
                android:layout_marginLeft="@dimen/application_font_size_left"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextSizeItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/application_string_text_one"
                    android:textColor="@color/relse_entrust_cooperation_prompt"
                    android:textSize="@dimen/application_font_size" />

                <EditText
                    android:id="@+id/et_company_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:maxLength="15"
                    android:textColor="@color/relse_entrust_cooperation_show"
                    android:textSize="@dimen/application_font_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/application_font_size_left"
                android:src="@drawable/details_tabling_line" />

            <LinearLayout
