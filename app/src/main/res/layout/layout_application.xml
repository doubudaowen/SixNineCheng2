                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:maxLength="15"
                    android:textColor="@color/relse_entrust_cooperation_show"
                    android:textSize="@dimen/application_font_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/application_font_size_left"
                android:src="@drawable/details_tabling_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_four_nine_top"
                android:layout_marginLeft="@dimen/application_font_size_left"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextSizeItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/application_string_text_three"
                    android:textColor="@color/relse_entrust_cooperation_prompt"
                    android:textSize="@dimen/application_font_size" />

                <EditText
                    android:id="@+id/et_numbe_person"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:maxLength="10"
                    android:textColor="@color/relse_entrust_cooperation_show"
                    android:textSize="@dimen/application_font_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/application_font_size_left"
                android:src="@drawable/details_tabling_line" />

            <LinearLayout
