<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/found_the_new_version_bging"
        android:textColor="@color/page_font"
        android:textSize="@dimen/my_two_text_width" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/prompt" />

    <!-- <TextView
        android:id="@+id/tv_make_call"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/found_the_new_version"
        android:textColor="@color/hidden_search_word"
        android:textSize="@dimen/found_the_new_version_size" /> -->

    <com.mobile.liujiucheng.sixninecheng.main.view.NumberProgressBar
        android:id="@+id/numberbar"
        style="@style/NumberProgressBar_Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        custom:progress_current="0" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/prompt_link" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/found_the_new_version_cancel_version"
            android:textColor="@color/page_font"
            android:textSize="@dimen/my_two_text_width" />
    </LinearLayout>

</LinearLayout>