<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/me_fxi_two_top" 
    android:minHeight="@dimen/me_fxi_two_top"
    android:background="@drawable/selector_listview_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_fxi_two_top_item_width"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_collection_icon"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/availability"
                />
            <!-- 标题 -->
            <LinearLayout
                android:id="@+id/ll_collection_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_collection_icon"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="[个人房租]在北京市朝阳双井区"
                    android:textColor="#000000"
                    android:textSize="18sp" />
                <!-- 房子的大小 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:id="@+id/tv_house"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text=" 面积:117/m²-户型-2室2厅1卫"
                        android:textColor="#0f80a2"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_marginRight="8dp"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_price"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="7500元/月"
                        android:textColor="#c2192f"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 房子的地区 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:singleLine="true"
                        android:id="@+id/tv_position"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text=" 北京 - 朝阳 - 酒仙桥"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:singleLine="true"
                        android:id="@+id/tv_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="bottom|center"
                        android:text=" 2015-7-28"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>