<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_shared_height"
        android:background="#51c0ea">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="房源详情"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/return_link" />

        <ImageView
            android:id="@+id/iv_fengxiang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/selector_button_call"
            android:src="@drawable/details_share" />
    </RelativeLayout>

    <com.mobile.liujiucheng.sixninecheng.main.view.MyScollview
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shuffling_figure" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/main_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_shuffling_figure" >
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:visibility="gone"
                        android:src="@drawable/home_carousel_not_show" />

                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:visibility="gone"
                        android:src="@drawable/home_carousel_show" />

                    <ImageView
                        android:id="@+id/iv_three"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/home_carousel_show" />

                    <ImageView
                        android:id="@+id/iv_four"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/home_carousel_show" />

                    <ImageView
                        android:id="@+id/iv_five"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/home_carousel_not_show" />

                    <ImageView
                        android:id="@+id/iv_six"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/home_carousel_show" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_me_fxi_two_top_item_width"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="银枫家园朝阳酒仙桥彩虹路6号"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/details_vertical_bar" />

                <LinearLayout
                    android:id="@+id/ll_collection"
                    android:layout_width="@dimen/details_fxi_two_item"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/details_collect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="收藏"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/details_horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_fxi_two_top_item_width"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="租价"
                        android:textColor="#333333"
                        android:textSize="@dimen/my_two_text_width" />

                    <TextView
                        android:id="@+id/tv_prices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/one_shadow_width"
                        android:text="2000元/月"
                        android:textColor="#85c776"
                        android:textSize="@dimen/my_two_text_width" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/details_vertical_bar" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="户型"
                        android:textColor="#333333"
                        android:textSize="@dimen/my_two_text_width" />

                    <TextView
                        android:id="@+id/tv_huxing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/one_shadow_width"
                        android:text="北卧"
                        android:textColor="#85c776"
                        android:textSize="@dimen/my_two_text_width" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/details_vertical_bar" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="面积"
                        android:textColor="#333333"
                        android:textSize="@dimen/my_two_text_width" />

                    <TextView
                        android:id="@+id/tv_mianji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/one_shadow_width"
                        android:text="20㎡"
                        android:textColor="#85c776"
                        android:textSize="@dimen/my_two_text_width" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/details_horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_fxi_two_top_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="特色 : "
                    android:textColor="#999999"
                    android:textSize="@dimen/my_two_text_width" />

                <TextView
                    android:id="@+id/tv_yangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape__bg_four"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="独立阳台"
                    android:textColor="@color/color_four_one"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_weishengjian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/shape__bg_two"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="独立卫生间"
                    android:textColor="@color/color_one"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/details_horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_fxi_two_top_item"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="楼层 : "
                        android:textColor="#999999"
                        android:textSize="@dimen/my_two_text_width" />

                    <TextView
                        android:id="@+id/tv_louceng"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="底层/6层"
                        android:textColor="#000000"
                        android:textSize="@dimen/my_two_text_width" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="朝向 : "
                        android:textColor="#999999"
                        android:textSize="@dimen/my_two_text_width" />

                    <TextView
                        android:id="@+id/tv_chaoxiang"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="南"
                        android:textColor="#000000"
                        android:textSize="@dimen/my_two_text_width" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/details_tabling_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_fxi_two_top_item"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="付款 : "
                        android:textColor="#999999"
                        android:textSize="@dimen/my_two_text_width" />

                    <TextView
                        android:id="@+id/tv_fukuan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="押一付三"
                        android:textColor="#000000"
                        android:textSize="@dimen/my_two_text_width" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="电话 : "
                        android:textColor="#999999"
                        android:textSize="@dimen/my_two_text_width" />

                    <TextView
                        android:id="@+id/tv_my_telphone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="15881352139"
                        android:textColor="#000000"
                        android:textSize="@dimen/my_two_text_width" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/details_tabling_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_fxi_two_top_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="地址 : "
                    android:textColor="#999999"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="银枫家园朝阳酒仙桥彩虹路6号"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/details_tabling_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_fxi_two_top"
                android:background="#EEEEEE"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="合租室友"
                android:textColor="#999999"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/huadong"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:orientation="horizontal">



                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/details_tabling_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_fxi_two_top"
                android:background="#EEEEEE"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="配置"
                android:textColor="#999999"
                android:textSize="18sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_top_item_width">

                <TextView
                    android:id="@+id/tv_peizhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="5dp"
                    android:text="配置描述"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </ScrollView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/details_tabling_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_fxi_two_top"
                android:background="#EEEEEE"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="详情描述"
                android:textColor="#999999"
                android:textSize="18sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_top_item_width">

                <TextView
                    android:id="@+id/tv_xiangqing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="5dp"
                    android:text="详情描述"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </ScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_fxi_two_top"
                android:background="#EEEEEE"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="位置及周边"
                android:textColor="#999999"
                android:textSize="18sp" />
            <!-- 修改成地图 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_top_item_width">

                <ImageView
                    android:id="@+id/iv_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/staticimage"
                    android:scaleType="fitXY" />
            </RelativeLayout>
        </LinearLayout>
    </com.mobile.liujiucheng.sixninecheng.main.view.MyScollview>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_shared_height"
        android:background="#51c0ea">

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="电话 : "
                android:textColor="#999999"
                android:textSize="@dimen/my_two_text_width" />

            <TextView
                android:id="@+id/tv_my_telphone2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="15881352139"

                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_button_call"
            android:src="@drawable/details_information" />

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_message"
            android:background="@drawable/selector_button_call"
            android:src="@drawable/details_phone" />
    </RelativeLayout>

</LinearLayout>