<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enter_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_shared_height"
        android:background="#67bce5">

        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/return_link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/my_two_text_width_map" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/my_three_nine_width"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/describe_one_text_width" />
    </RelativeLayout>


    <EditText
        android:id="@+id/et_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/loading_fxi_two_item_top"
        android:layout_marginTop="@dimen/loading_fxi_two_item_top"
        android:background="#50ffffff"
        android:hint="请输入你的手机号"
        android:numeric="integer"
        android:paddingLeft="30dp"
        android:textColorHint="#EEEEEE" />

    <!-- 分割线 -->

    <View
        android:id="@+id/login_line_2"
        style="@style/login_line_style"
        android:layout_below="@+id/layout_login_phone"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/loading_fxi_two_item_top"
        android:background="#50ffffff"
        android:hint="请输入密码"
        android:paddingLeft="30dp"
        android:password="true"
        android:textColorHint="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="@dimen/home_text_top_one"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_remember"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/enter_check_box" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_padding"
            android:gravity="center"
            android:text="记住密码"
            android:textColor="#ffffff"
            android:textSize="@dimen/my_one_text_width" />

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="34dp"
            android:gravity="center|right"
            android:text="忘记密码?"
            android:textColor="#ffffff"
            android:textSize="@dimen/my_one_text_width" />
    </LinearLayout>

    <Button
        android:id="@+id/bu_loading"
        android:layout_width="match_parent"
        android:layout_height="@dimen/loading_fxi_two_item_top"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/my_three_nine_width"
        android:background="#67bce5"
        android:text="登录"
        android:textColor="#FFFFFF" />

</LinearLayout>