<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/me_fxi_two_top"
    android:background="@drawable/selector_listview_bg"
    android:minHeight="@dimen/me_fxi_two_top"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_panda_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/availability"
        android:scaleType="fitXY" />
    <!-- 标题 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_panda_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_panda_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="银枫家园朝阳酒仙桥彩虹路6号-北卧"
            android:textColor="#000000"
            android:textSize="16sp" />
        <!-- 房子的大小 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_panda_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/6层"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/details_vertical_bar" />

                <TextView
                    android:id="@+id/tv_panda_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="20㎡"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/details_vertical_bar" />

                <TextView
                    android:id="@+id/tv_panda_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="合租"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_panda_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:text="2000元/月"
                android:textColor="#c2192f"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- 房子的地区 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_panda_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="张先生"
                android:textColor="#aaaaaa"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_panda_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="bottom"
                android:text="80后"
                android:textColor="#aaaaaa"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_panda_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="bottom"
                android:text="人事经理"
                android:textColor="#aaaaaa"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>