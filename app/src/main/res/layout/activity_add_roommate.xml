<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.mobile.liujiucheng.sixninecheng.main.activityliu.AddRoommateActivity">

    <RelativeLayout
        android:id="@+id/addRoommate_rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_shared_height"
        android:background="#51c0ea">

        <ImageView
            android:id="@+id/addRoommate_exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/return_link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加室友"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/addRoommate_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addRoommate_rl1"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/addRoommate_icon_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="头像" />

                <TextView
                    android:id="@+id/addRoommate_icon_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="必须是真实的个人生活照"
                    android:textColor="#CCCCCC" />

                <ImageView
                    android:id="@+id/addRoommate_icon_iv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/aa" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/addRoommate_name_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/addRoommate_name_et"
                    style="@style/instruction_word_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/addRoommate_name_tv1"

                    android:hint="某某某"
                    android:textColorHint="#DDDDDD" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addRoommate_sex_tv"
                    style="@style/instruction_word_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="性别" />

                <RadioGroup
                    android:id="@+id/addRoommate_rg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/addRoommate_sex_man"
                        style="@style/instruction_word_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:padding="10dp"
                        android:text="男" />

                    <RadioButton
                        android:id="@+id/addRoommate_sex_woman"
                        style="@style/instruction_word_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="女" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/addRoommate_tel_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="电话" />

                <EditText
                    android:id="@+id/addRoommate_tel_et"
                    style="@style/instruction_word_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:layout_toRightOf="@+id/addRoommate_tel_tv1"
                    android:hint="18899989888"
                    android:textColorHint="#DDDDDD" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:id="@+id/addRoommate_age"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/addRoommate_age_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="年龄" />

                <TextView
                    android:id="@+id/addRoommate_age_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/addRoommate_age_iv1"
                    android:text="请选择"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/addRoommate_age_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/my_return_my" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:id="@+id/addRoommate_interest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/addRoommate_interest_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="兴趣" />

                <TextView
                    android:id="@+id/addRoommate_interest_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/addRoommate_interest_iv1"
                    android:text="请选择"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/addRoommate_interest_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/my_return_my" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:id="@+id/addRoommate_constellation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/addRoommate_constellation_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="星座" />

                <TextView
                    android:id="@+id/addRoommate_constellation_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/addRoommate_constellation_iv1"
                    android:text="请选择"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/addRoommate_constellation_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/my_return_my" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:id="@+id/addRoommate_hometown"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/addRoommate_hometown_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="籍贯" />

                <TextView
                    android:id="@+id/addRoommate_hometown_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/addRoommate_hometown_iv1"
                    android:text="请选择"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/addRoommate_hometown_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/my_return_my" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:id="@+id/addRoommate_school"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/addRoommate_school_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="院校" />

                <TextView
                    android:id="@+id/addRoommate_school_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/addRoommate_school_iv1"
                    android:text="请选择"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/addRoommate_school_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/my_return_my" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:id="@+id/addRoommate_job"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/addRoommate_job_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="职业" />

                <TextView
                    android:id="@+id/addRoommate_job_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/addRoommate_job_iv1"
                    android:text="请选择"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/addRoommate_job_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/my_return_my" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>

            <RelativeLayout
                android:id="@+id/addRoommate_houseStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_shared_height">

                <TextView
                    android:id="@+id/addRoommate_houseStyle_tv1"
                    style="@style/instruction_word_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="房间" />

                <TextView
                    android:id="@+id/addRoommate_houseStyle_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/addRoommate_houseStyle_iv1"
                    android:text="请选择"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/addRoommate_houseStyle_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/my_return_my" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addRoommate_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_shared_height"
        android:layout_below="@+id/addRoommate_sv"
        android:layout_gravity="bottom"
        android:background="#51c0ea"
        android:text="确定添加"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>
