<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextSizeItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/relse_entrust_cooperation_prompt</item>
    </style>
    <style name="translucent">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
<!--         <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item> -->

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
 <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
 <!-- 指定消失的动画xml -->
    </style>

    <!-- activity的动画切入 -->
    <style name="Anim_fade" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/tran_next_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/tran_next_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/tran_pre_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/tran_pre_exit</item>
    </style>
     <!-- activity的动画切入 -->
    <style name="Anim_second" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>
    
     <style name="second" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_activity</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_activity</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_activity</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_activity</item>
    </style>
    
    <!--对话框模式  -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>





    <!-- 登陆line样式 -->
    <style name="login_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#c8c8c8</item>
    </style>

    <!-- 登陆里nearlayout样式 -->
    <style name="login_linear_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 登陆edittext样式 -->
    <style name="login_et_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAppearance">@style/style_txt_login_middle_black</item>
        <item name="android:textColorHint">#b5b5b5</item>
    </style>

    <!-- 登陆中字体，黑色 -->
    <style name="style_txt_login_middle_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4f5256</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 小蓝条的样式-->
    <style name="searchBtnView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">3px</item>
        <item name="android:background">#66c6f2</item>
        <item name="android:layout_weight">1</item>

    </style>
    <style name="instruction_word_size">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#DDDDDD</item>
        <item name="android:background">@null</item>
    </style>
    <style name="my_release_roommate_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>